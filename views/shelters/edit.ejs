<% layout('/layouts/boilerplate.ejs')%>
<div class="row">
  <h1 class="text-center">Edit <%= shelter.title %></h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/shelters/<%=shelter._id%>?_method=PUT"
      method="POST"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="shelter[title]"
          value="<%=shelter.title%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <input
          class="form-control"
          type="text"
          id="description"
          name="shelter[description]"
          value="<%=shelter.description%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="shelter[location]"
          value="<%=shelter.location%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <div class="form-file custom-file">
          <label class="form-label" for="image"> Images </label>
          <input
            type="file"
            class="form-control"
            id="image"
            name="image"
            multiple
          />
        </div>
      </div>
      <div class="mb-3">
        <div>
          <label class="form-label" for="deleteImages">Click to Delete</label>
        </div>

        <% shelter.images.forEach(function (img,i) {%>
        <img
          src="<%= img.thumbnail %>"
          class="img-thumbnail"
          alt="Image of the shelter"
        />
        <div class="form-check-inline">
          <input
            type="checkbox"
            id="image-<%= i %>"
            name="deleteImages[]"
            value="<%= img.filename %>"
          />
        </div>
        <!-- <label for="image-<%=i%>">Delete?</label> -->
        <% }) %>
      </div>
      <div class="mb-3"><button class="btn btn-success">Update</button></div>
    </form>
    <a href="/shelters/<%= shelter._id %>">Back To <%= shelter.title %></a>
  </div>
</div>
